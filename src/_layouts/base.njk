<!doctype html>
<html lang="en" class="h-100">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- SEO & Social -->
        <meta name="description" content="{{ blurb or metadata.blurb }}">
        <meta name="robots" content="follow">
        <link rel="canonical" href="{{ metadata.origin }}{{ page.url }}">

        <meta property="og:title" content="{{ metadata.title }}" />
        {% set articleRE = r/\/[0-9]{4}\/.*/g %}
        <meta property="og:type" content="{% if articleRE.test(page.url) %}article{% else %}website{% endif %}" />
        <meta property="og:url" content="{{ page.url }}" />
        <meta property="og:image" content="{{ metadata.origin }}/assets/img/opengraph{{ page.url | trim('/') }}.png" />
        <meta property="og:description" content="{{ blurb or metadata.blurb }}" />
        {% set articleRE = r/\/[0-9]{4}\/.*/g %}
        {% if articleRE.test(page.url) %}
        {# TODO: meta property="article:author" itemprop="author" content=""/ #}
        <meta property="article:published_time" itemprop="datePublished" content="{{ createdAt or metadata.createdAt }}T09:00:00+00:00"/>
        <meta property="article:modified_time " itemprop="dateModified" content="{{ updatedAt or metadata.updatedAt }}T09:00:00+00:00"/>
        {% endif %}
        <meta property="og:updated_time" itemprop="dateUpdated" content="{{ updatedAt or metadata.updatedAt }}T09:00:00+00:00"/>

        <meta name="twitter:card" content="summary">
        <meta property="twitter:domain" content="{{ metadata.domain }}">
        <meta property="twitter:url" content="{{ metadata.origin }}{{ page.url }}">
        <meta name="twitter:title" content="{{ metadata.title }}">
        <meta name="twitter:image" content="{{ metadata.origin }}/assets/img/opengraph{{ page.url | trim('/') }}.png">
        <meta name="twitter:description" content="{{ blurb or metadata.blurb }}">

        {% if title %}
            <title>{{ title }} | {{ metadata.title }}</title>
        {% else %}
            <title>{{ metadata.title }}</title>
        {% endif %}

        <!-- generated with realfavicongenerator.net -->
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="{{ metadata.speculumSource }}/favicon/apple-touch-icon.png" />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="{{ metadata.speculumSource }}/favicon/favicon-32x32.png" />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="{{ metadata.speculumSource }}/favicon/favicon-16x16.png" />
        <link
            rel="manifest"
            href="{{ metadata.speculumSource }}/favicon/site.webmanifest" />
        <link
            rel="mask-icon"
            href="{{ metadata.speculumSource }}/favicon/safari-pinned-tab.svg"
            color="#5bbad5" />
        <link
            rel="shortcut icon"
            href="{{ metadata.speculumSource }}/favicon/favicon.ico" />
        <meta name="apple-mobile-web-app-title" content="DepositDuck" />
        <meta name="application-name" content="DepositDuck" />
        <meta name="msapplication-TileColor" content="#00aba9" />
        <meta
            name="msapplication-config"
            content="{{ metadata.speculumSource }}/favicon/browserconfig.xml" />
        <meta name="theme-color" content="#ffffff" />

        <style>
            @import url("https://fonts.googleapis.com/css2?family=Protest+Strike&display=swap");
        </style>

        <link href="{{ metadata.speculumSource }}/css/main.min.css" rel="stylesheet" />
        <script src="{{ metadata.speculumSource }}/js/bootstrap.bundle.min.js"></script>
        <link
            href="{{ metadata.speculumSource }}/css/bootstrap-icons.min.css"
            rel="stylesheet" />

    </head>

    <body class="d-flex flex-column h-100">

        {% include 'navbar.njk' %}

        <main class="container">
            {{ content | safe }}
        </main>

        {% include 'footer.njk' %}

        <!--script src="/assets/js/main.js"></script-->
    </body>

</html>

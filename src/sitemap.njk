---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in collections.all %}
        {% if page.url not in ['/assets/html/_template/', '/hljs/'] %}
            <url>
                <loc>{{ metadata.origin }}{{ page.url | url }}</loc>
                <lastmod>{{ page.data.updatedAt if page.data.updatedAt else page.date.toISOString().slice(0, 10) }}</lastmod>
            </url>
        {% endif %}
    {% endfor %}
</urlset>
